# Debug.eyp
# compile it eyapp -b Debug.eyp -o Debug.pl to produce an 
# executable

%token D S

%{
our $VERSION = '0.01';
%}

%%
p:
    ds ';' ss  
  | ss
;

ds:
    D ';' ds    
  | D       
    {
      print "Reducing by rule:\n";
      print "\tds -> D\n";
      $_[1];
    }
;

ss:
    S ';' ss      
  | S       
;

%%

my $tokenline = 1;

sub _Error {
  my $parser = shift;

  my ($token) = $parser->YYCurval;
  my ($what) = $token ? "input: '$token'" : "end of input";
  die "Syntax error near $what line num $tokenline\n";
}

my $input;

sub _Lexer {
  
  for ($input) {
    s{^(\s)}{} and $tokenline += $1 =~ tr{\n}{};
    return ('',undef) unless $_;
    return ($1,$1) if s/^(.)//;
  }
  return ('',undef);
}

sub Run {
  my $debug = shift || 0;
  $debug = 0x1F if $debug;

  $input = <STDIN>;

  my $self = __PACKAGE__->new();

  return $self->YYParse( yylex => \&_Lexer, yyerror => \&_Error,
                         yydebug => $debug,
  );
}

Run(@ARGV) unless caller;
